<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <Switch
            android:id="@+id/swAlert"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:layout_marginStart="120dp"
            android:layout_marginRight="16dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:layout_constraintBottom_toBottomOf="@+id/tvTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.968"
            app:layout_constraintStart_toEndOf="@+id/tvTime" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:text="8:00"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.037" />

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="31dp"
            android:layout_height="17dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="6dp"
            android:text="오전"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvTime"
            app:layout_constraintStart_toEndOf="@+id/tvTime" />

        <ImageView
            android:id="@+id/tvLogo1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvTime"
            app:layout_constraintTop_toBottomOf="@+id/tvTime"
            app:srcCompat="@drawable/ic_custom" />

        <ImageView
            android:id="@+id/tvMore"
            android:layout_width="27dp"
            android:layout_height="29dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/swAlert"
            app:layout_constraintTop_toBottomOf="@+id/tvTime"
            app:srcCompat="@drawable/ic_more" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="일요일"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/tvLogo1"
            app:layout_constraintStart_toEndOf="@+id/tvLogo1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>